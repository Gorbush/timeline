    "version": "0.2.0",
    "configurations": [
        {
            "name": "Init",
            "type": "python",
            "request": "launch",
            "module": "timeline.manage",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "init"
            ]
        },
        {
            "name": "Watchdog",
            "type": "python",
            "request": "launch",
            "module": "timeline.manage",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "watchdog"
            ]
        },

        {
            "name": "Worker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "-A", 
                "timeline.celery_process", 
                "worker",
                "-P",
                "prefork",
                "--autoscale=4,1",
                "-n",
                "fast@%n",
                "-Q",
                "beat,process,analyze,geo,transcode"
            ]
        },
        {
            "name": "Webapp",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "module": "flask",
            "env": {
                "FLASK_APP": "timeline/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": false
        },
        {
            "command": "npm run serve",
            "name": "Run npm serve",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "type": "node-terminal"
        },

        {
            "name": "Python: Debug Current File",
            "cwd": "${workspaceFolder}/backend",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        }

    ]
}