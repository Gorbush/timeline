    "version": "0.2.0",
    "configurations": [
        {
            "name": "Init",
            "type": "python",
            "request": "launch",
            "module": "timeline.manage",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "init"
            ]
        },
        {
            "name": "Set initial DB Version",
            "type": "python",
            "request": "launch",
            "module": "timeline.manage",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "db",
                "stamp",
                "head"
            ]
        },

        {
            "name": "DB Migrate",
            "type": "python",
            "request": "launch",
            "module": "timeline.manage",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "db",
                "migrate"
            ]
        },

        {
            "name": "DB Upgrade",
            "type": "python",
            "request": "launch",
            "module": "timeline.manage",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "db",
                "upgrade"
            ]
        },

        {
            "name": "Watchdog",
            "type": "python",
            "request": "launch",
            "module": "timeline.manage",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/backend/.env",
            "args": [
                "watchdog"
            ],
            "env": {
                "DEBUG": "True"
            }
        },
        {
            "name": "Worker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/backend/.env",
            "args": [
                "-A",
                "timeline.celery_process",
                "worker",
                "-P",
                "prefork",
                "--autoscale=3,1",
                "-n",
                "worker@%n",
                "-Q",
                "beat,process,analyze,geo"
            ],
            "env": {
                "DEBUG": "True"
            }
        },
        {
            "name": "Worker - Video",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/backend/.env",
            "args": [
                "-A",
                "timeline.celery_video",
                "worker",
                "-P",
                "prefork",
                "--autoscale=1,0",
                "-n",
                "video@%n",
                "-Q",
                "transcode_prio,transcode"
            ],
            "env": {
                "DEBUG": "True"
            }
        },
        {
            "name": "Webapp",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "module": "flask",
            "envFile": "${workspaceFolder}/backend/.env",
            "env": {
                "FLASK_APP": "timeline.app",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "APPLICATION_ROOT": "/timeline",
                "FLASK_RUN_PORT": "5001",
                "BE_PORT" : "5001",
            },
            "args": [
                "run"
            ],
            "jinja": false
        },
        {
            "command": "npm run serve",
            "name": "Run npm serve",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "type": "node-terminal",
            "envFile": "${workspaceFolder}/backend/.env",
            "env": {
                "TIMELINE_BASEPATH": "http://192.168.0.81:9093/timeline",
                "BE_HOST": "192.168.0.81",
                "BE_PORT": "5001",
                // "BE_PORT": "9093",
                // "BE_PORT": "5000",
                "WAIT_HOSTS": "localhost:9093",
                "WAIT_HOSTS_TIMEOUT": "180",
                "WAIT_SLEEP_INTERVAL": "3",   
                "WAIT_AFTER_HOSTS": "2"
            },

        },
        {
            "name": "Python: Run Test",
            "cwd": "${workspaceFolder}/backend",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "DEBUG": "True"
            }
        },
        /*
        {
            "type": "chrome",
            "request": "launch",
            "name": "vuejs: chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/frontend/src",
            "breakOnLoad": true,
            "pathMapping": {
              "/_karma_webpack_": "${workspaceFolder}/frontend/src"
            },
            "sourceMapPathOverrides": {
              "webpack:/*": "${webRoot}/*",
              "/./*": "${webRoot}/*",
              "/src/*": "${webRoot}/*",
              "/*": "*",
              "/./~/*": "${webRoot}/node_modules/*"
            },
            // "preLaunchTask": "vuejs: start"
          }
          */
          {
              "cwd": "${workspaceFolder}",
              "name": "Launch Chrome",
              "request": "launch",
              "type": "chrome",
              "url": "http://localhost:8080",
              "webRoot": "${workspaceFolder}/frontend/src",
              "breakOnLoad": true,
              "sourceMapPathOverrides": {
              "webpack:///src/*": "${webRoot}/*"
           }
          },
    ]
}